# 开发环境配置
NODE_ENV=development

# 前端应用端口
PORT=3000
# 或者使用 WDS_SOCKET_PORT（webpack-dev-server 5.x）
WDS_SOCKET_PORT=3000

# 禁用主机检查（仅开发环境）
DANGEROUSLY_DISABLE_HOST_CHECK=true

# 或者明确指定允许的主机
# WDS_SOCKET_HOST=localhost

# API基础URL - 使用 proxy 代理
REACT_APP_API_BASE_URL=

# 后端服务端口（用于 proxy）
SERVER_PORT=3001

# 浏览器自动打开
BROWSER=none

# 关闭 source map（可选，提升构建速度）
GENERATE_SOURCEMAP=true
